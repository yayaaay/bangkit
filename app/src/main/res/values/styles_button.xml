<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" >
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Button.Primary">
        <item name="android:background">@drawable/sel_btn_primary_rounded_10</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.Primary15">
        <item name="android:background">@drawable/sel_btn_primary_rounded_15</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.Outline15">
        <item name="android:background">@drawable/bg_btn_outline_rounded_15</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.Secondary">
        <item name="android:background">@drawable/bg_btn_secondary_rounded_10</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Button.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Delete">
        <item name="android:background">@drawable/sel_btn_delete_rounded_15</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>